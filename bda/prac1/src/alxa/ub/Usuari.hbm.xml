<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="alxa.ub.Usuari" table="USUARI">
        <id name="nom" column="NOM">
            <generator class="identity" />
        </id>
        
        <property name="contrasenya" column="CONTRASENYA" />
        <property name="direccio" column="DIRECCIO" />
        
        <set name="articles" table="USUARIARTICLECAMPANYA">
            <key column="NOM"/>
            <many-to-many column="IDARTICLE" class="alxa.ub.Article"/>
        </set>
        
        <set name="campanyes" table="USUARIARTICLECAMPANYA">
            <key column="NOM"/>
            <many-to-many column="IDCAMPANYA" class="alxa.ub.Campanya"/>
        </set>
    </class>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ub.edu.bda.Usuari" table="USUARI">
        <id name="nom" column="NOM">
            <generator class="identity" />
        </id>
        
        <property name="contrasenya" column="CONTRASENYA" />
        <property name="direccio" column="DIRECCIO" />
        
        <set name="articles" table="USUARIARTICLECAMPANYA">
            <many-to-many column="IDARTICLE" class="com.ub.edu.bda.Article"/>
        </set>
        
        <set name="articles" table="USUARIARTICLECAMPANYA">
            <key column="NOM"/>
            <key column="CAMPANYA"/>
            <key column="DATA_INICI"/>
            <key column="DATA_FI"/>
            <many-to-many column="IDARTICLE" class="com.ub.edu.bda.Article"/>
        </set>
        
        <set name="campanyes" table="USUARIARTICLECAMPANYA">
            <key column="employee_id"/>
            <many-to-many column="certificate_id" class="Certificate"/>
        </set>
    </class>
</hibernate-mapping>
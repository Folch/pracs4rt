<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="alxa.ub.Campanya" table="CAMPANYA">
        <id name="idCampanya" column="IDCAMPANYA">
            <generator class="identity" />
        </id>
        
        <property name="nom" column="NOM" />
        <property name="data_inici" column="DATA_INICI" />
        <property name="data_fi" column="DATA_FI" />
        
        <property name="imprt" column="IMPORT" />
        <property name="numArticles" column="NUMARTICLES" />
        
        
        <set name="articles" table="USUARIARTICLECAMPANYA">
            <key column="IDCAMPANYA"/>
            <many-to-many column="IDARTICLE" class="alxa.ub.Article"/>
        </set>
        
        <set name="usuaris" table="USUARIARTICLECAMPANYA">
            <key column="IDCAMPANYA"/>
            <many-to-many column="NOM" class="alxa.ub.Usuari"/>
        </set>
    </class>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="alxa.ub.SubFamilia" table="SUBFAMILIA">
        <composite-id>
            <key-property name="idSubFamilia" 
                             column="IDSUBFAMILIA"/>
            <key-many-to-one name="familia" 
                          column="IDFAMILIA"/>
        </composite-id>
        
        <property name="nom" column="NOM" />
        
        <many-to-one name="familia" class="alxa.ub.Familia" fetch="select">
            <column name="IDFAMILIA" />
        </many-to-one>
    </class>
</hibernate-mapping>
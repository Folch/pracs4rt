<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="alxa.ub.model.Article" table="ARTICLE">
        
        <id name="idArticle" column="IDARTICLE">
            <generator class="identity" />
        </id>
        
        <property name="talla" column="TALLA" />
        <property name="color" column="COLOR" />
        <property name="stock" column="STOCK" />
        <property name="preu" column="PREU" />
        <property name="iva" column="IVA" />
        
        <many-to-one name="producte" class="alxa.ub.model.Producte" fetch="select">
            <column name="PRODUCTE" />
        </many-to-one>
        
        <set name="campanyes" table="USUARIARTICLECAMPANYA">
            <key column="IDARTICLE"/>
            <many-to-many column="IDCAMPANYA" class="alxa.ub.model.Campanya"/>
        </set>
        
        <set name="usuaris" table="USUARIARTICLECAMPANYA">
            <key column="IDARTICLE"/>
            <many-to-many column="NOM" class="alxa.ub.model.Usuari"/>
        </set>

        <many-to-one name="marca" class="alxa.ub.model.Marca" fetch="select">
            <column name="MARCA" />
        </many-to-one>
    </class>
</hibernate-mapping>